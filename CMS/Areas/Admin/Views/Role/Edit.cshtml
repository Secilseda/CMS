@model RoleEdit 
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Edit Roles</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly"class="text-danger"></div>
                    <input type="hidden"name="RoleName"value="@Model.Role.Name" />

                    <div class="row">
                        <div class="col-6">
                            <h2>Add User to<span class="badge badge-primary">@Model.Role.Name</span>Role</h2>
                            <div class="table table-responsive">
                                <table class="table table-striped">
                                    @if (Model.NonMembers.Count()==0)
									{
                                        <tr>
                                            <td>All users are members.</td>
                                        </tr>
									}
									else
									{
										foreach (AppUser user in Model.NonMembers)
										{
                                            <tr>
                                                <td>@user.UserName</td>
                                                <td>
                                                    <input type="checkbox"value="@user.Id"name="AddIds" />
                                                </td>
                                            </tr>
										}
									}
                                </table>
                            </div>
                        </div>
                        <div class="col-6">
                            <h2>Remove users from<span class="badge badge-danger">@Model.Role.Name</span>Role</h2>
                            <div class="table table-responsive">
                                <table class="table-striped">
                                    @if (Model.Members.Count()==0)
									{
                                        <tr>
                                            <td>No User are members..!</td>
                                        </tr>
									}
									else
									{
										foreach (AppUser user in Model.Members)
										{
                                            <tr>
                                                <td>@user.UserName</td>
                                                <td>
                                                    <input type="checkbox"value="@user.Id"name="AddIds" />
                                                </td>
                                            </tr>
										}
									}
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit"value="Save"class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="Index"class="btn btn-block btn-dark">Back to List</a>
            </div>
        </div>
    </div>
</div>

