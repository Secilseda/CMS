@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
	ViewData["Title"] = "Index";
}
<div class="row">
	<div class="col-sm-12">
		<div class="card">
			<div class="card-header">
				<h5>List of Roles</h5>
			</div>
			<div class="card-body">
				<div class="table table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>Id</th>
								<th>Role</th>
								<th>Users</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.Name</td>
									<td user-role="@item.Id"></td>
									<td>
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
										<a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion btn btn-danger">Delete</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
			<div class="card-footer">
				<a asp-action="Create"class="btn btn-block btn-dark">Create a new one</a>
			</div>
		</div>
	</div>
</div>
	
	



