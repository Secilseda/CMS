@model SmallCartViewModel
<!--özet bi card view içinde bağımsız bir view çağırmak için .-->
@if (Model!=null)
{
	<p>
		Item in cart:<span class="badge badge-primary">@Model.NumberofItems</span>
	</p>
	<p>
		Total:<b>@Model.TotalAmount.ToString("C2")</b>
	</p>
	<a asp-controller="Cart"asp-action="Index"class="btn btn-sm btn-primary">View Cart</a>
	<br/>
	<a asp-controller="Cart"asp-action="Clear"class="btn btn-sm btn-danger">Clear Cart</a>

}
else
	{
		<p class="lead">Your cart is empty..!></p>
	}